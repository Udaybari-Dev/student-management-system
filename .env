# Secret key for JWT or app config
SECRET_KEY=Your_Secret_Key_Here123!

# Database connection details (Local/PostgreSQL)
DB_USER=your_db_user
DB_PASSWORD=your_secure_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File upload directory
UPLOAD_DIR=uploads

# Remote PostgreSQL DB (e.g., Neon)
NEON_DATABASE_URL=postgresql://your_user:your_password@your-db-host.region.aws.neon.tech/your_db_name?sslmode=require
